/* pages/main.wxss */

.root_view{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    position: absolute;
    align-content: flex-start;
    top: 0;
    background-color: #375045;
}

.item_view{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 15px;
    border: 3px solid gray;
}

.grid_view{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: flex-start; 
}

.grid_item{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.item_text{
    color: white;
    font-size: 14px;
    text-overflow:ellipsis; white-space:nowrap; overflow:hidden;
}
