/* pages/main.wxss */

.root_view{
    width: 100%;
    height: 100%;
    position:absolute;
}

.item_view{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 15px;
}

.grid_view{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: flex-start; 
    z-index: 1;
    padding-left: 10px;
    padding-right: 10px;
}

.grid_item{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.item_text{
    color: #8E8E8E;
    font-size: 14px;
    text-overflow:ellipsis; white-space:nowrap; overflow:hidden;
}

.bottom_operation_view{
  width: 100%;
  height: 50px;
  z-index: 10;
  position:absolute;
  bottom:50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.switch_bar{
  width: 100%;
  height:60px;
  background-color: #FB3A46;
  font-size: 14px;
  color: white;
}

.contion_tip{ 
  color: #8E8E8E; 
  font-size: 12px; 
  padding: 10px; 
}
