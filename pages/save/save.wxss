/* pages/save/save.wxss */

.root_view{
    width: 100%;
    height: 100%;
    position:absolute;
}

.bottom_operation_view{
  width: 100%;
  height: 50px;
  z-index: 10;
  position:absolute;
  bottom:50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.switch_bar{
  width: 100%;
  height:60px;
  background-color: #FB3A46;
  font-size: 14px;
  color: white;
}

.input_view{
  border-bottom: 1px solid #999999
}

.text_view{
  font-size: 14px;
  color: #666666;
}

.item_view{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 15px;
}

.grid_view{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: flex-start; 
    z-index: 1;
    padding-left: 20px;
}

.grid_item{
    display: flex;
    flex-direction: column;
    align-items: center;
}