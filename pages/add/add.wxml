<!--add.wxml-->
<view class='container'>
  <view style="z-index: 1;height: 500px; width: 100%;position:absolute;">
    <ec-canvas id="mychart-dom-line-all" canvas-id="mychart-line-all" ec="{{ ecAll }}"></ec-canvas>
  </view>
  <movable-area bindtap="test" style="z-index: 2;height: 500px; width: 100%;position:absolute;">
    <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
    <block wx:for="{{peakingEQList}}" wx:key="item" wx:for-index="idx" data-idx="{{idx}}">
         <movable-view class='a h center' style="height: 1px;width: 50px; margin-top:5px;display:{{ctrlViewIndex==item.index?'show':'none'}}" x="{{item.x - 75}}" y="{{item.y - 8}}" direction="none" >
          <view style='height: 1px;width: 100%; background-color: orange;'></view>
        </movable-view>

         <movable-view style="display:{{ctrlViewIndex==item.index?'show':'none'}}" class='a h center' x="{{item.x - 75}}" y="{{item.y - 8}}" direction="horizontal">
          <view class='ctrlView' style='width:5px; height:5px'></view>
        </movable-view> 

        


        <movable-view bindtap='onCtrlViewClick' id='{{item.index}}' class='a h center' data-id='{{item.index}}' x="{{item.x - 8}}" y="{{item.y - 8}}" bindchange="viewMoveChange" direction="all" >
           <view class="ctrlViewOutSide a" style="height: 50px; width: 50px; z-index:3;display:{{ctrlViewIndex==item.index?'show':'none'}}"></view> 

          <view class='h center_v a' style="width:60px; height:5px z-index:4;display:{{ctrlViewIndex==item.index?'show':'none'}}">
            <view class='ctrlView' style='width:5px;height:5px'></view>
            <view class='orangeLine' style='margin-top:2.5px; flex:1'></view>
            <view class='ctrlView' style='width:5px;height:5px'></view>
          </view>

           <view  class="ctrlView a" style="height: 16px; width: 16px; z-index:5">{{ctrlViewIndex}}</view> 
        </movable-view>
        <!-- <movable-view x="{{item.x + 30 + 38}}" y="{{item.y - 8}}" direction="horizontal">
          <view class='h'>
            <view class='orangeLine' style='width: 30px; margin-top: 2.5px;'></view>
            <view class='ctrlView' style='width:5px;height:5px'></view>
          </view>
        </movable-view> -->

    </block>
  </movable-area>
</view>