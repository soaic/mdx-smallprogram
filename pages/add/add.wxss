/**index.wxss**/
.container {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

ec-canvas {
  width: 100%;
  height: 50%;
}

.ctrlView{
  border-radius: 90px;
  border: 1px solid white;
}

.ctrlViewOutSide{
  background-color: transparent;
  border-radius: 90px;
  border: 1px solid white;
}

.orangeLine{
  height: 1px;
  width: 100%;
  background-color: orange;
}

