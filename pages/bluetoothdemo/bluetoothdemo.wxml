<!--pages/bluetoothdemo/bluetoothdemo.wxml-->
<view>连接状态：{{isConnected?'已连接':'未连接'}}</view>
<button style="display:{{isConnected?'none':'show'}}" bindtap='onResetConnectClikc' type='warn'>点击重连</button>
<view>发送：（hex数据格式）</view>
<view>{{sendTextHex}}</view>
<textarea value='{{sendText}}' bindinput="onTextInputChange" class='input_view'></textarea>
<view>接收到的数据:</view>
<textarea value='{{receiveText}}' class='input_view'></textarea>
<button bindtap='onSendClick' type='primary' style='margin-top:10px'>发送</button>
<button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
<view wx:else>请升级微信版本</view>
    














